require 'simplecov'
SimpleCov.start do
  add_filter '/spec'
end

require 'rspec'
require '<%= gemname %>'

RSpec.configure do |config|
  include <%= Kernel.const_get(gemname.split('_').map { |w| w[0].upcase << w[1..-1] }.join) %>

  # Returns the full path to the +name+ fixture file.
  def fixture(name)
    File.expand_path(File.join(File.dirname(__FILE__), 'fixtures', name))
  end
end
